.module-chart
  background: #1d1d1d
  max-width 1000px
  height: calc(100vh - 80px)
  overflow: auto
  margin: 40px 0
  border-radius: 10px

hide($columns)
  .module-chart
    .ui-table__cell
      display: none
    .ui-table__header
      display: none
  .module-chart
    for n in (1..$columns)
      .ui-table__cell:nth-child({n})
        display: block
      .ui-table__header:nth-child({n})
        display: block

@media (max-width: 1000px)
  .module-chart
    margin 0
    height 100vh
    width 100%
    border-radius: 0
@media (min-width: 700px) and (max-width: 800px)
  hide(5)
@media (min-width: 600px) and (max-width: 700px)
  hide(4)
@media (min-width: 500px) and (max-width: 600px)
  hide(3)
@media (max-width: 500px)
  hide(2)